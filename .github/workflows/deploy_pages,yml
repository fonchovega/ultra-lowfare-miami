name: Deploy Frontend (/public + /data)

on:
  workflow_dispatch:
  push:
    branches: [ "main" ]
    paths:
      - "public/**"
      - "data/**"
      - ".github/workflows/deploy_pages.yml"

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Pages
        uses: actions/configure-pages@v5

      - name: Upload /public and /data as Pages artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: |
            ./public
            ./data

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
