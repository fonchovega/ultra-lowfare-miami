name: deploy-pages

on:
  workflow_dispatch:
  push:
    branches:
      - main
    paths:
      - "public/**"
      - "data/**"
      - ".github/workflows/deploy_pages.yml"

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: deploy-pages
  cancel-in-progress: true

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Ensure public and data folders exist
        run: |
          mkdir -p public data
          echo "[ls -la]" && ls -la && echo "[tree]" || true

      - name: Upload /public and /data as Pages artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: |
            ./public
            ./data

      - name: Deploy to GitHub Pages
        uses: actions/deploy-pages@v4
        with:
          timeout: 600000
