name: Deploy FrontDesk to GitHub Pages

on:
  workflow_dispatch:
  push:
    branches: [ main ]
    paths:
      - "public/**"
      - "data/**"
      - ".github/workflows/deploy_pages.yml"

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: true

jobs:
  deploy:
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Ensure public and data folders exist
        run: |
          mkdir -p public data
          echo "[ls -la] public:" && ls -la public || true
          echo "[ls -la] data:" && ls -la data || true

      - name: Pack /public and /data into artifact
        run: |
          echo "ðŸ“¦ Empaquetando public/ y data/â€¦"
          tar -czf site_artifact.tar.gz ./public ./data

      - name: Upload artifact to Pages
        uses: actions/upload-pages-artifact@v3
        with:
          path: site_artifact.tar.gz

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
